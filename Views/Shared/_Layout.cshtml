<!DOCTYPE html>
<html lang="pl" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WorkShopManager</title>

    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">

    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap 5.3.3 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Ikony -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- FullCalendar -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.css" rel="stylesheet" />

    <!-- Twoje style (najpierw ogólne) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WorkShopManager.styles.css" asp-append-version="true" />

    <!-- Motyw dark NA KOŃCU, żeby miał „ostatnie słowo” -->
    <link rel="stylesheet" href="~/css/bootstrap-theme-dark.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100 app-bg">
    <header>
        <!-- Navbar w trybie dark + tło zależne od motywu -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-body-tertiary border-bottom shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2"
                   asp-area=""
                   asp-controller="Home"
                   asp-action="Index">

                    <img src="~/images/logo.png"
                         alt="WorkShopManager"
                         class="navbar-logo" />

                    <span class="visually-hidden">WorkShopManager</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNavbar" class="collapse navbar-collapse justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <!-- miejsce na linki nawigacyjne -->
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <div class="btn-group dropdown">
                                    <button type="button"
                                            class="btn btn-sm btn-outline-primary dropdown-toggle d-flex align-items-center"
                                            id="userDropdown"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        <i class="bi bi-person-circle me-2"></i>
                                        <span class="text-truncate" style="max-width: 30ch;">@User.Identity.Name</span>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                        @if (User.IsInRole("Workshop"))
                                        {
                                            <li><a class="dropdown-item" asp-controller="Home" asp-action="Index">Panel Warsztatu</a></li>
                                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Wyloguj</a></li>
                                        }
                                        else
                                        {
                                            <li><a class="dropdown-item" asp-controller="Account" asp-action="UserPanel">Panel użytkownika</a></li>
                                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Wyloguj</a></li>
                                        }
                                    </ul>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <div class="btn-group dropdown">
                                    <button type="button"
                                            class="btn btn-sm btn-outline-primary dropdown-toggle d-flex align-items-center"
                                            id="navbarAccount"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        <i class="bi bi-person-circle me-2"></i>Konto
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarAccount">
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Zaloguj</a></li>
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="ChooseRegistrationType">Zarejestruj</a></li>
                                    </ul>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @* <div style="height: 4.5rem;"></div> *@

    <main role="main" class="flex-grow-1">
        <div class="container pb-3">
            @RenderBody()
        </div>
    </main>

    <!-- Footer w kolorach motywu -->
    <footer class="bg-body-tertiary border-top text-center py-3 mt-auto">
        <div class="container text-body-secondary">
            &copy; @DateTime.Now.Year - WorkShopManager -
            <a class="link-underline link-underline-opacity-0" asp-area="" asp-controller="Home" asp-action="Privacy">Polityka</a>
        </div>
    </footer>

    <!-- jQuery + walidacja -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.13/dist/jquery.validate.unobtrusive.min.js"></script>

    <!-- Bootstrap 5.3.3 JS (bundle z Popperem) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- FullCalendar -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js"></script>

    <!-- Select2  -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
