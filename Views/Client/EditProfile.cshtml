@model WorkShopManager.Models.ClientEditProfileViewModel

<div class="container mt-4">
    <h1 class="text-center">Edytuj swoje dane</h1>
    <form asp-action="EditProfile" method="post" class="mt-4">
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5>Dane kontaktowe</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Numer telefonu</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5>Dane pojazdu</h5>
            </div>
            <div class="card-body">
                <div class="mb-3 position-relative">
                    <label class="form-label">Marka pojazdu</label>
                    <input type="text" class="form-control" id="vehicleMakeInput"
                           placeholder="Wpisz lub wybierz markę" autocomplete="off" />
                    <ul id="vehicleMakeList" class="list-group position-absolute w-100"
                        style="max-height:200px; overflow-y:auto; display:none; z-index:1055;"></ul>

                    <input type="hidden" asp-for="SelectedMakeId" id="selectedMakeId" />
                    <span asp-validation-for="SelectedMakeId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Model pojazdu</label>
                    <select asp-for="SelectedModelId" class="form-control" id="modelDropdown">
                        <option value="">-- wybierz model --</option>
                    </select>
                    <span asp-validation-for="SelectedModelId" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="VehicleBrand" id="vehicleBrandHidden" />
                <input type="hidden" asp-for="VehicleModel" id="vehicleModelHidden" />


                <div class="mb-3">
                    <label asp-for="VehicleYear" class="form-label">Rok produkcji</label>
                    <input asp-for="VehicleYear" class="form-control" />
                    <span asp-validation-for="VehicleYear" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="VehicleRegistrationNumber" class="form-label">Numer rejestracyjny</label>
                    <input asp-for="VehicleRegistrationNumber" class="form-control" />
                    <span asp-validation-for="VehicleRegistrationNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="VehicleVIN" class="form-label">Numer VIN</label>
                    <input asp-for="VehicleVIN" class="form-control" />
                    <span asp-validation-for="VehicleVIN" class="text-danger"></span>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Zapisz zmiany</button>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            let allMakes = [];

            function loadCarMakes() {
                $.get('/Account/GetMakes', function (data) {
                    allMakes = data;

                    const makeId = $('#selectedMakeId').val();
                    if (makeId) {
                        const found = allMakes.find(m => m.id == makeId);
                        if (found) {
                            $('#vehicleMakeInput').val(found.name);
                            $('#vehicleBrandHidden').val(found.name);
                            loadModels(makeId);
                        }
                    }
                });
            }

            function loadModels(makeId) {
                $('#modelDropdown').empty().append('<option>Ładowanie modeli...</option>');

                $.get('/Account/GetModelsByMake', { makeId: makeId }, function (data) {
                    $('#modelDropdown').empty().append('<option value="">-- wybierz model --</option>');
                    $.each(data, function (index, model) {
                        $('#modelDropdown').append('<option value="' + model.id + '">' + model.name + '</option>');
                    });

                    const selectedModelId = '@(Model.SelectedModelId?.ToString() ?? "")';
                    if (selectedModelId) {
                        $('#modelDropdown').val(selectedModelId);
                        const selectedText = $('#modelDropdown option:selected').text();
                        if (selectedText && selectedText !== '-- wybierz model --') {
                            $('#vehicleModelHidden').val(selectedText);
                        }
                    }
                });
            }

            function renderMakesList(filter) {
                const list = $('#vehicleMakeList');
                list.empty();

                const filtered = allMakes.filter(make =>
                    make.name.toLowerCase().startsWith((filter || '').toLowerCase())
                );

                if (filtered.length === 0) {
                    list.hide();
                    return;
                }

                filtered.forEach(make => {
                    list.append(`<li class="list-group-item list-group-item-action" data-id="${make.id}">${make.name}</li>`);
                });

                list.show();
            }

            $('#vehicleMakeInput').on('focus keyup', function () {
                renderMakesList($(this).val());
            });

            $('#vehicleMakeList').on('click', 'li', function () {
                const selectedText = $(this).text();
                const selectedId = $(this).data('id');

                $('#vehicleMakeInput').val(selectedText);
                $('#selectedMakeId').val(selectedId);
                $('#vehicleMakeList').hide();

                // aktualizuj hidden brand
                $('#vehicleBrandHidden').val(selectedText);

                // reset model
                $('#modelDropdown').val('');
                $('#vehicleModelHidden').val('');

                loadModels(selectedId);
            });

            $('#modelDropdown').on('change', function () {
                const selectedText = $('#modelDropdown option:selected').text();
                if (selectedText && selectedText !== '-- wybierz model --') {
                    $('#vehicleModelHidden').val(selectedText);
                } else {
                    $('#vehicleModelHidden').val('');
                }
            });

            $(document).on('click', function (e) {
                if (!$(e.target).closest('#vehicleMakeInput').length && !$(e.target).closest('#vehicleMakeList').length) {
                    $('#vehicleMakeList').hide();
                }
            });

            loadCarMakes();
        });
    </script>
}



