@model WorkShopManager.Models.RegisterClientViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h3>Rejestracja jako Klient</h3>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="All" class="alert alert-danger d-none" id="validationSummary" role="alert"></div>

                    <form asp-action="RegisterClient" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Adres e-mail</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Hasło</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Potwierdź hasło</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <hr />

                        <h5 class="text-primary">Dane kontaktowe</h5>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Numer telefonu</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <hr />

                        <h5 class="text-primary">Dane pojazdu</h5>

                        <div class="mb-3 position-relative">
                            <label class="form-label">Marka pojazdu</label>
                            <input type="text" class="form-control" id="vehicleMakeInput" placeholder="Wpisz lub wybierz markę" autocomplete="off" />
                            <ul id="vehicleMakeList" class="list-group position-absolute w-100" style="max-height:200px; overflow-y:auto; display:none; z-index:1055;"></ul>
                            <input type="hidden" asp-for="SelectedMakeId" id="selectedMakeId" />
                            <span asp-validation-for="SelectedMakeId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Model pojazdu</label>
                            <select asp-for="SelectedModelId" class="form-control" id="modelDropdown">
                                <option value="">-- wybierz model --</option>
                            </select>
                            <span asp-validation-for="SelectedModelId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VehicleYear" class="form-label">Rok produkcji</label>
                            <input asp-for="VehicleYear" type="number" class="form-control" />
                            <span asp-validation-for="VehicleYear" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VehicleRegistrationNumber" class="form-label">Numer rejestracyjny</label>
                            <input asp-for="VehicleRegistrationNumber" class="form-control" />
                            <span asp-validation-for="VehicleRegistrationNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VehicleVIN" class="form-label">Numer VIN</label>
                            <input asp-for="VehicleVIN" class="form-control" />
                            <span asp-validation-for="VehicleVIN" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Zarejestruj</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center text-muted">
                    <small>Masz już konto? <a asp-controller="Account" asp-action="Login" class="text-primary">Zaloguj się</a></small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            let allMakes = [];

            function loadCarMakes() {
                $.get('/Account/GetMakes', function (data) {
                    allMakes = data;
                });
            }

            function renderMakesList(filter) {
                const list = $('#vehicleMakeList');
                list.empty();

                const filtered = allMakes.filter(make =>
                    make.name.toLowerCase().startsWith(filter.toLowerCase())
                );

                if (filtered.length === 0) {
                    list.hide();
                    return;
                }

                filtered.forEach(make => {
                    list.append(`<li class="list-group-item list-group-item-action" data-id="${make.id}">${make.name}</li>`);
                });

                list.show();
            }

            $('#vehicleMakeInput').on('focus', function () {
                const value = $(this).val();
                renderMakesList(value);
            });

            $('#vehicleMakeInput').on('keyup', function () {
                const value = $(this).val();
                renderMakesList(value);
            });

            $('#vehicleMakeList').on('click', 'li', function () {
                const selectedText = $(this).text();
                const selectedId = $(this).data('id');

                $('#vehicleMakeInput').val(selectedText);
                $('#selectedMakeId').val(selectedId);
                $('#vehicleMakeList').hide();

                $('#modelDropdown').empty().append('<option>Ładowanie modeli...</option>');

                $.get('/Account/GetModelsByMake', { makeId: selectedId }, function (data) {
                    $('#modelDropdown').empty().append('<option value="">-- wybierz model --</option>');
                    $.each(data, function (index, model) {
                        $('#modelDropdown').append('<option value="' + model.id + '">' + model.name + '</option>');
                    });
                });
            });

            $(document).on('click', function (e) {
                if (!$(e.target).closest('#vehicleMakeInput').length && !$(e.target).closest('#vehicleMakeList').length) {
                    $('#vehicleMakeList').hide();
                }
            });

            loadCarMakes();
        });
    </script>
}
