<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h3>Wybierz typ rejestracji</h3>
                </div>
                <div class="card-body text-center">
                    <p class="mb-4">Zarejestruj się jako klient lub warsztat, aby w pełni korzystać z możliwości naszej aplikacji.</p>
                    <div class="d-grid gap-3">
                        <a asp-controller="Account" asp-action="RegisterClient" class="btn btn-primary btn-lg">
                            <i class="bi bi-person"></i> Rejestracja jako Klient
                        </a>
                        <a asp-controller="Account" asp-action="RegisterWorkshop" class="btn btn-secondary btn-lg">
                            <i class="bi bi-tools"></i> Rejestracja jako Warsztat
                        </a>
                    </div>
                </div>
                <div class="card-footer text-center text-muted">
                    <small>Masz już konto? <a asp-controller="Account" asp-action="Login" class="text-primary">Zaloguj się</a></small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}


